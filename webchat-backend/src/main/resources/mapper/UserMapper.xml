<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.justvastness.webchat.user.mapper.UserMapper">
    <!--namespace根据自己需要创建的的mapper的路径和名称填写-->
    <select id="findByUsername" resultType="com.justvastness.webchat.user.entity.UserEntity">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <insert id="register" parameterType="com.justvastness.webchat.user.dto.RegisterDTO">
        INSERT INTO user (username, password)
        VALUES (#{username}, #{password})
    </insert>
</mapper>